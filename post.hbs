{{!< default}}

{{#post}}
  <main class="article {{post_class}}">
    <h1>{{title}}</h1>
    {{#if image}}
      <img class="article_main_image" src="{{image}}" alt="Imagen de {{title}}" />
    {{/if}}

    {{content}}

    <script>
      var form = document.querySelector("a.button.form");
      if (form) {
        form.onclick = function(){
          form.insertAdjacentHTML('afterEnd', '<h3 class="thanks">Gracias! <a href="http://facebook.com/sharer.php?u=http://www.makersupv.com/#{article.id}">Comp√°rtelo con tus amigos</a></h3>');
          form.remove();
        }
      }

      // NEXT clicked
      var nexts = document.getElementsByClassName("next");
      if (nexts.length > 0) {
        var next = nexts[0];
        next.onclick = function(){
          _gaq.push(['_trackEvent', 'Link', 'next']);
          _gaq.push(['_trackPageview', '/next']);
          }
        }


      /* CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE */
      var disqus_shortname = 'makersupv';
      var disqus_identifier = "#{ article.id }";
      var disqus_title = "#{ article.title }";
      
      (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    </script>
  </main>
{{/post}}
